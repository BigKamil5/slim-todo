{% extends 'layouts/app.twig' %}

{% block title %}

    Articles List

{% endblock %}

{% block content %}


    <div class="row">
        <div class="col-md-8 col-md-offset-2">

            {% for article in articles %}
                <div class="card">
                    <a href = "{{ path_for('articles.show', { id:article.id }) }}">
                        <div class="card-header">
                            {{article.title}}
                        </div>
                    </a>
                    <div class="card-body">
                        {{article.content}}
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}